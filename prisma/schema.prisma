// --- NEW MODEL: Application ---
model Application {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  projectId   String            @db.ObjectId
  applicantId String            @db.ObjectId
  status      ApplicationStatus @default(PENDING) // PENDING, ACCEPTED, REJECTED, WITHDRAWN
  coverLetter String? // Student's message/cover letter
  appliedAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Notification tracking fields
  seenByApplicant Boolean   @default(true) // true when created (no notification for own application)
  statusChangedAt DateTime? // Track when status was last changed by organization

  // Relationships
  project   Project @relation("ProjectApplications", fields: [projectId], references: [id])
  applicant User    @relation("Applicant", fields: [applicantId], references: [id])

  @@unique([projectId, applicantId]) // A student can only apply once to a project
  @@index([applicantId, status])
  @@index([projectId, status])
  @@index([status, seenByApplicant])
}

// Enum for Application Status
enum ApplicationStatus {
  PENDING
  ACCEPTED
  REJECTED
  WITHDRAWN
}

// --- CHAT MODELS ---

model Conversation {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Participants (many-to-many relation)
  participantIds String[] @db.ObjectId
  participants   User[]   @relation("ConversationParticipants", fields: [participantIds], references: [id])

  // Messages in this conversation
  messages Message[]

  // Last message info for quick list display
  lastMessageAt      DateTime?
  lastMessagePreview String?
  lastMessageSender  String? // Name of sender for preview

  @@index([participantIds])
  @@index([updatedAt(sort: Desc)])
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Who sent it
  senderId String @db.ObjectId
  sender   User   @relation("SentMessages", fields: [senderId], references: [id])

  // Which conversation
  conversationId String       @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  // Read status tracking
  readBy String[] @db.ObjectId // Array of user IDs who have read this message

  // Optional: message types and attachments
  messageType MessageType @default(TEXT)
  attachments String[]    @default([]) // URLs to files if needed

  @@index([conversationId, createdAt(sort: Desc)])
  @@index([senderId])
}

enum MessageType {
  TEXT
  IMAGE
  FILE
  SYSTEM // For system messages like "User joined project"
}
